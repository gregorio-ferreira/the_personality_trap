# Public-safe configuration template.
#
# Copy to `.yaml` and fill with your credentials:
#   cp .yaml.example .yaml
# Values can also be provided via environment variables using the pattern
# PERSONAS_SECTION__KEY (double underscore), e.g.:
#   export PERSONAS_OPENAI__API_KEY="sk-..."
#   export PERSONAS_PG__PASSWORD="your-password"
#
# Never commit `.yaml` with real credentials.

openai:
  api-key: "sk-proj-REPLACE_WITH_YOUR_OPENAI_API_KEY"
  api-key-pain-narratives: "sk-proj-REPLACE_WITH_SECONDARY_KEY_IF_NEEDED"
  org-id: "org-REPLACE_WITH_YOUR_ORG_ID"

bedrock:
  aws-credentials: "your-aws-profile-name"  # Optional named profile
  aws-access-key: "AKIA_REPLACE_WITH_YOUR_AWS_ACCESS_KEY"
  aws-secret-key: "REPLACE_WITH_YOUR_AWS_SECRET_KEY"
  aws-region: "us-east-1"

pg:
  password: "your_secure_password"
  host: "localhost"
  database: "personas"
  user: "personas"
  port: 5432

schema:
  default_schema: "personality_trap"
  target_schema: "my_experiment"  # Optional isolated schema for experiments
